@model Ass2.Models.Movietable
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using(Html.BeginForm())
 {
    <div class="form-horizontal">
        <h5>Movie</h5>
        <hr />
        @Html.HiddenFor(m => m.MovieId)

        <div class="form-group">
            <b>@Html.DisplayName("Name")</b>
            @Html.EditorFor(m => m.MovieName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.MovieName)
        </div>

        <div class="form-group">
            <b>@Html.DisplayName("Release Date")</b>
            @Html.EditorFor(m => m.ReleaseDate, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.ReleaseDate)
        </div>

        <div class="form-group">
                <input type="submit" value="Save" class="btn btn-danger" />
        </div>
    </div>
 }

<div>
    @Html.ActionLink("Back to List","Index")
</div>