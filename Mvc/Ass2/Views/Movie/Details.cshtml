@model Ass2.Models.Movietable
@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h5>Movie</h5>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Name:")
        </dt>
        <dd>
            @Html.DisplayFor(m=>m.MovieName)
        </dd>
        <dt>
            @Html.DisplayName("Release Date:")
        </dt>
        <dd>
            @Html.DisplayFor(m=>m.ReleaseDate)
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit","Edit",new { id = Model.MovieId}) |
    @Html.ActionLink("Back to List","Index")
</p>
